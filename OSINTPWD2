import argparse
import subprocess
from dotenv import load_dotenv
import os
import requests

# Load environment variables
load_dotenv()

def run_sherlock(query, sites=None):
    """
    Run Sherlock command to search for the given username on social media platforms.
    """
    command = ["sherlock", query]
    if sites:
        command.extend(["--site", ",".join(sites)])

    try:
        print(f"\nRunning Sherlock command: \033[93m{' '.join(command)}\033[0m")
        result = subprocess.run(command, capture_output=True, text=True, check=True)
        print(f"Sherlock result:\n{result.stdout}")
        return result.stdout
    except subprocess.CalledProcessError as e:
        print(f"Sherlock command failed with error: {e}")
        return None

def check_pwned(email):
    """
    Check if the given email has been pwned using the Have I Been Pwned API.
    """
    url = f"https://haveibeenpwned.com/api/v3/breachedaccount/{email}"
    headers = {
        "hibp-api-key": os.getenv("HIBP_API_KEY")
    }
    try:
        response = requests.get(url, headers=headers)
        response.raise_for_status()
        return response.json()
    except requests.RequestException as e:
        print(f"Have I Been Pwned API request failed with error: {e}")
        return None

def search_breach_directory(email):
    """
    Search for the given email using the Breach Directory API.
    """
    url = "https://breachdirectory.p.rapidapi.com/"
    querystring = {"func": "auto", "term": email}
    headers = {
        "X-RapidAPI-Key": os.getenv("BREACH_DIRECTORY_API_KEY"),
        "X-RapidAPI-Host": "breachdirectory.p.rapidapi.com"
    }
    try:
        response = requests.get(url, headers=headers, params=querystring)
        response.raise_for_status()
        return response.json()
    except requests.RequestException as e:
        print(f"Breach Directory API request failed with error: {e}")
        return None

def display_pwned_info(email, pwned):
    """
    Display information about pwned status for the given email.
    """
    if pwned and "Breaches" in pwned:
        print(f"\nEmail address {email} has been \033[91mpwned\033[0m in the following breaches (Have I Been Pwned):")
        for breach in pwned["Breaches"]:
            print(f"- {breach['Name']} (pwned count: {breach['PwnedCount']})")
    else:
        print(f"\nEmail address {email} not found in Have I Been Pwned.")

def display_breach_directory_info(email, breach_data):
    """
    Display information about breaches from Breach Directory for the given email.
    """
    if breach_data and "breaches" in breach_data:
        print(f"\nEmail address {email} found in the following breaches in Breach Directory:")
        for breach in breach_data["breaches"]:
            print(f"- {breach['Title']}")
    else:
        print(f"\nNo breaches found in Breach Directory for {email}.")

def user_menu():
    """
    Display the main menu and return the user's choice.
    """
    print("\n\033[94mMain Menu:\033[0m")
    print("1. Search for Username")
    print("2. Check Breaches in Email")
    print("3. Exit")
    return input("Enter your choice (1-3): ")

def username_menu():
    """
    Display the username search menu and return the entered username.
    """
    return input("\nEnter the username to search: ")

def email_menu():
    """
    Display the email breach check menu and return the entered email.
    """
    return input("\nEnter the email to check for breaches: ")

def main():
    while True:
        choice = user_menu()

        if choice == '1':
            # Search for username
            username = username_menu()
            run_sherlock(username)
        elif choice == '2':
            # Check breaches in email
            email = email_menu()

            # Check if the email has been pwned and use the Breach Directory API
            pwned = check_pwned(email)
            display_pwned_info(email, pwned)

            # Use the Breach Directory API
            breach_data = search_breach_directory(email)
            display_breach_directory_info(email, breach_data)
        elif choice == '3':
            # Exit the script
            print("Exiting...")
            break
        else:
            print("Invalid choice. Please enter a valid option.")

if __name__ == "__main__":
    main()
